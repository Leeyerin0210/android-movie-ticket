<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.result.ResultActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/result_guide_header_layout"
        android:layout_width="match_parent"
        android:layout_height="114dp"
        android:background="@color/result_header_purple"
        android:paddingBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/result_guide_header_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="영화 상영 시작 시간 15분 전까지\n취소가 가능합니다."
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/result_title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/result_guide_header_layout"
        tools:text="해리포터 시리즈만큼 긴 제목" />

    <TextView
        android:id="@+id/result_screen_time_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/result_title_textview"
        tools:text="2024.3.1 17:00" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/result_seats_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/result_screen_time_textview">

        <TextView
            android:id="@+id/result_seats_type_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="일반 "
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/result_seats_count_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@id/result_seats_type_textview"
            app:layout_constraintStart_toEndOf="@id/result_seats_type_textview"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="2" />

        <TextView
            android:gravity=""
            android:id="@+id/result_seats_quantifier_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="명 | "
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/result_seats_count_textview"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/result_seats_textview"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:breakStrategy="simple"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBaseline_toBaselineOf="@id/result_seats_quantifier_textview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/result_seats_quantifier_textview"
            app:layout_constraintTop_toTopOf="@id/result_seats_quantifier_textview"
            tools:text="A1, A2, A3, A4" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/result_seats_layout">

        <TextView
            android:id="@+id/result_price_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="25,000" />

        <TextView
            android:id="@+id/result_won_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="원 (현장 결제)"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBaseline_toBaselineOf="@id/result_price_textview"
            app:layout_constraintStart_toEndOf="@id/result_price_textview" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>