<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_ticketing_result_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ticketingResult.TicketingResultActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_guide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#9160F9"
        android:gravity="bottom|center"
        android:paddingTop="72dp"
        android:paddingBottom="12dp"
        android:text="@string/text_guide"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_movie_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_guide"
        tools:text="케이엠짱" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_movie_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_movie_title"
        tools:text="2024.1.1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_ticket_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:layout_marginTop="72dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@id/tv_divider"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_movie_date"
        tools:text="예니 1명" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_divider"
        android:textColor="@color/black"
        android:layout_marginHorizontal="8dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_ticket_count"
        app:layout_constraintEnd_toStartOf="@id/tv_selected_seats"
        app:layout_constraintStart_toEndOf="@id/tv_ticket_count"
        app:layout_constraintTop_toTopOf="@id/tv_ticket_count" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_selected_seats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_divider"
        app:layout_constraintTop_toTopOf="@id/tv_ticket_count"
        app:layout_constraintBottom_toBottomOf="@id/tv_ticket_count"
        tools:text="B2, B3" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_ticket_count"
        tools:text="13,000원 (현장 결제)" />
</androidx.constraintlayout.widget.ConstraintLayout>
