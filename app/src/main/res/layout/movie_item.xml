<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/item_imageview"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:src="@drawable/harry_potter_1" />

    <TextView
        android:id="@+id/item_title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/item_imageview"
        app:layout_constraintTop_toTopOf="@id/item_imageview"
        tools:text="해리 포터와 마법사의 돌" />

    <TextView
        android:id="@+id/item_screen_date_header_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="상영일: "
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/item_title_textview"
        app:layout_constraintTop_toBottomOf="@id/item_title_textview" />

    <TextView
        android:id="@+id/item_screen_date_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/item_screen_date_header_textview"
        app:layout_constraintStart_toEndOf="@id/item_screen_date_header_textview"
        app:layout_constraintTop_toTopOf="@id/item_screen_date_header_textview"
        tools:text="2024.3.1" />

    <TextView
        android:id="@+id/item_running_time_header_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="러닝타임: "
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/item_screen_date_header_textview"
        app:layout_constraintTop_toBottomOf="@id/item_screen_date_header_textview" />

    <TextView
        android:id="@+id/item_running_time_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/item_running_time_header_textview"
        app:layout_constraintStart_toEndOf="@id/item_running_time_header_textview"
        app:layout_constraintTop_toTopOf="@id/item_running_time_header_textview"
        tools:text="152" />


    <TextView
        android:id="@+id/item_minute_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="분"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/item_running_time_textview"
        app:layout_constraintTop_toTopOf="@id/item_running_time_header_textview" />

    <Button
        android:id="@+id/item_reservation_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:text="지금 예매"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/item_running_time_header_textview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>